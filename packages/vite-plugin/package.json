{
    "name": "@systembug/wsx-vite-plugin",
    "version": "0.0.2",
    "description": "Vite plugin for WSX Framework",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "src",
        "!**/__tests__",
        "!**/test"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --external esbuild",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external esbuild",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist coverage"
    },
    "keywords": [
        "vite",
        "plugin",
        "wsx",
        "web-components"
    ],
    "dependencies": {
        "@systembug/wsx-core": "workspace:*"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@types/node": "^20.0.0",
        "jest": "^29.0.0",
        "ts-jest": "^29.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "vite": "^5.0.0"
    },
    "peerDependencies": {
        "vite": ">=4.0.0",
        "esbuild": ">=0.25.0"
    }
}
