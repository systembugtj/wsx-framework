{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@systembug/wsx-core",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "src/types/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/__tests__/**",
        "**/*.test.ts"
    ]
}