{
    "name": "@systembug/wsx-core",
    "version": "0.0.2",
    "description": "Core WSX Framework - Web Components with JSX syntax",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./types/index.d.ts",
    "exports": {
        ".": {
            "types": "./types/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./jsx-runtime": {
            "types": "./types/jsx-runtime.d.ts",
            "import": "./dist/jsx-runtime.mjs",
            "require": "./dist/jsx-runtime.js"
        }
    },
    "files": [
        "dist",
        "src",
        "types",
        "!**/__tests__",
        "!**/test"
    ],
    "scripts": {
        "build": "tsup src/index.ts src/jsx.ts src/jsx-runtime.ts --format cjs,esm",
        "dev": "tsup src/index.ts src/jsx.ts src/jsx-runtime.ts --format cjs,esm --watch",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "web-components",
        "jsx",
        "typescript",
        "custom-elements"
    ],
    "devDependencies": {
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "@types/node": "^20.0.0"
    },
    "peerDependencies": {
        "typescript": ">=4.7.0"
    }
}
